{
    "manifest_version":     3,
    "name":                 "FaceBlock",
    "short_name":           "FaceBlock",
    "description":          "Ensures you confirm you want to visit Facebook before letting you get lost scrolling.",
    "version":              "0.0.1.0",
    "version_name":         "0.0.1 Beta",
    "author":               "alex.kotanko1@gmail.com",
    "homepage_url":         "https://github.com/LazySmurf/FaceBlock",
    "incognito":            "spanning",
    "update_url":           "https://github.com/LazySmurf/FaceBlock/releases",
    "options_page":         "Backend/options.html",
  
    "icons": {
        "16":               "Shared/assets/img/Facebook.png",
        "32":               "Shared/assets/img/Facebook.png",
        "48":               "Shared/assets/img/Facebook.png",
        "128":              "Shared/assets/img/Facebook.png"
    },

    "action": {
        "default_popup":    "Popup/menu.html",
        "default_title":    "FaceBlock"
    },

    "content_scripts": [{
        "matches":          ["https://facebook.com/*", "https://*.facebook.com/*"],
        "css":              ["Shared/assets/css/bootstrap.css"],
        "js":               ["Shared/assets/js/jquery.js"],
        "run_at":           "document_end"
    }],

    "host_permissions": [
                            "https://facebook.com/*",
                            "https://*.facebook.com/*"
    ],

    "web_accessible_resources": [{
        "resources":        ["/Shared/assets/*", "/Shared/assets/js/*", "/Shared/assets/css/*", "/Modal/*", "/Modal/index.html", "/Modal/modal.html", "/Modal/css/*", "/Modal/js/*"],
        "matches":          ["https://facebook.com/*", "https://*.facebook.com/*"]
    }],
    
    "permissions": [
                            "activeTab",
                            "scripting",
                            "tabs",
                            "contextMenus"
    ],
      
    "background": {
        "service_worker":   "Backend/background.js"
    }
  }